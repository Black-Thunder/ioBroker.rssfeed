    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["--debug", "0"],
            "program": "node_modules/iobroker.rssfeed/main.js",
            "cwd":"${workspaceFolder}/../../",
            "stopOnEntry": true,
            "outputCapture": "std",
        },
        {
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "name": "Gulp package node",
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "args": [
                "translate" // replace this with your gulp task name
            ]
        }
    ]
}